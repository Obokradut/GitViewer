<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GitTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/git_light_gray</item>
        <item name="errorTextColor">@color/git_error</item>
        <item name="hintTextColor">@color/git_secondary</item>
        <item name="boxStrokeColor">@color/git_light_gray</item>
    </style>

    <style name="GitButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/git_green_button</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GitProgressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="DetailsText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>